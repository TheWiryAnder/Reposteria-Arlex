rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Reglas para comprobantes de pago
    match /comprobantes_pago/{fileName} {
      // Permitir lectura a todos los usuarios autenticados
      allow read: if request.auth != null;

      // Permitir escritura solo al usuario que sube su propio comprobante
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
                   && request.resource.contentType.matches('image/.*'); // Solo imágenes
    }

    // Reglas para imágenes de productos (solo admin)
    match /productos/{allPaths=**} {
      allow read: if true; // Todos pueden ver las imágenes de productos
      allow write: if request.auth != null; // Solo usuarios autenticados pueden subir (idealmente solo admin)
    }

    // Reglas para logos y configuración del negocio
    match /configuracion/{allPaths=**} {
      allow read: if true; // Todos pueden ver
      allow write: if request.auth != null; // Solo usuarios autenticados pueden subir (idealmente solo admin)
    }

    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
