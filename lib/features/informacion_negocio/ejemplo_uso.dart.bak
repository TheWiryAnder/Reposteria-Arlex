/// 3. EJEMPLO: Mostrar informaci贸n del negocio en la p谩gina de inicio
class InfoNegocioWidget extends StatelessWidget {
  const InfoNegocioWidget({super.key});

  @override
  Widget build(BuildContext context) {
    return Consumer<InformacionControlador>(
      builder: (context, controlador, child) {
        if (controlador.isLoading) {
          return const Center(child: CircularProgressIndicator());
        }

        if (controlador.error != null) {
          return Center(
            child: Text(
              'Error: ${controlador.error}',
              style: const TextStyle(color: Colors.red),
            ),
          );
        }

        final info = controlador.informacion;
        if (info == null) {
          return const Center(child: Text('No hay informaci贸n disponible'));
        }

        return Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            // Nombre del negocio
            Text(
              info.galeria.nombre,
              style: const TextStyle(
                fontSize: 24,
                fontWeight: FontWeight.bold,
              ),
            ),
            const SizedBox(height: 8),

            // Slogan
            Text(
              info.redesSociales.slogan,
              style: const TextStyle(
                fontSize: 16,
                fontStyle: FontStyle.italic,
                color: Colors.grey,
              ),
            ),
            const SizedBox(height: 16),

            // Horarios
            Text(
              'Horarios de Atenci贸n:',
              style: const TextStyle(fontWeight: FontWeight.bold),
            ),
            Text('Lunes a Viernes: ${info.galeria.horarioAtencion.lunesViernes}'),
            Text('S谩bado: ${info.galeria.horarioAtencion.sabado}'),
            Text('Domingo: ${info.galeria.horarioAtencion.domingo}'),
            const SizedBox(height: 16),

            // Contacto
            Text(
              'Contacto:',
              style: const TextStyle(fontWeight: FontWeight.bold),
            ),
            Text(' ${info.email}'),
            Text(' WhatsApp: ${info.whatsapp}'),
            Text(' Tel茅fono: ${info.redesSociales.telefono}'),
            Text(' ${info.direccion}'),
          ],
        );
      },
    );
  }
}

/// 4. EJEMPLO: Verificar si se aceptan pedidos online
class EstadoPedidosWidget extends StatelessWidget {
  const EstadoPedidosWidget({super.key});

  @override
  Widget build(BuildContext context) {
    final controlador = context.watch<InformacionControlador>();
    final configuracion = controlador.configuracion;

    if (configuracion == null) {
      return const SizedBox.shrink();
    }

    if (!configuracion.aceptaPedidosOnline) {
      return Card(
        color: Colors.orange[100],
        child: const Padding(
          padding: EdgeInsets.all(16.0),
          child: Row(
            children: [
              Icon(Icons.info, color: Colors.orange),
              SizedBox(width: 8),
              Expanded(
                child: Text(
                  'Actualmente no estamos aceptando pedidos online',
                  style: TextStyle(color: Colors.orange),
                ),
              ),
            ],
          ),
        ),
      );
    }

    return Card(
      color: Colors.green[100],
      child: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            const Row(
              children: [
                Icon(Icons.check_circle, color: Colors.green),
                SizedBox(width: 8),
                Text(
                  'Pedidos Online Disponibles',
                  style: TextStyle(
                    fontWeight: FontWeight.bold,
                    color: Colors.green,
                  ),
                ),
              ],
            ),
            const SizedBox(height: 8),
            Text('Costo de env铆o: \$${configuracion.costoEnvio}'),
            Text('Monto m铆nimo: \$${configuracion.montoMinimoEnvio}'),
            Text('Tiempo de preparaci贸n: ${configuracion.tiempoPreparacionMinimo} horas'),
            Text('Radio de entrega: ${configuracion.radiusEntregaKm} km'),
          ],
        ),
      ),
    );
  }
}

