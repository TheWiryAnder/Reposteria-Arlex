/// 7. EJEMPLO: Actualizar informaci贸n (para administradores)
class EjemploActualizaciones extends StatelessWidget {
  const EjemploActualizaciones({super.key});

  Future<void> _togglePedidos(BuildContext context, bool estado) async {
    final controlador = context.read<InformacionControlador>();
    final resultado = await controlador.togglePedidosOnline(estado);

    if (!context.mounted) return;

    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text(
          resultado
              ? 'Pedidos ${estado ? "activados" : "desactivados"}'
              : 'Error al actualizar',
        ),
        backgroundColor: resultado ? Colors.green : Colors.red,
      ),
    );
  }

  Future<void> _actualizarHorarios(BuildContext context) async {
    final controlador = context.read<InformacionControlador>();

    final nuevosHorarios = HorarioAtencion(
      domingo: 'Cerrado',
      lunesViernes: '9:00 AM - 7:00 PM',
      sabado: '10:00 AM - 6:00 PM',
    );

    final resultado = await controlador.actualizarHorarios(nuevosHorarios);

    if (!context.mounted) return;

    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text(
          resultado ? 'Horarios actualizados' : 'Error al actualizar',
        ),
        backgroundColor: resultado ? Colors.green : Colors.red,
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    final controlador = context.watch<InformacionControlador>();
    final config = controlador.configuracion;

    if (config == null) {
      return const SizedBox.shrink();
    }

    return Column(
      children: [
        SwitchListTile(
          title: const Text('Aceptar Pedidos Online'),
          value: config.aceptaPedidosOnline,
          onChanged: (value) => _togglePedidos(context, value),
        ),
        ElevatedButton(
          onPressed: () => _actualizarHorarios(context),
          child: const Text('Actualizar Horarios de Ejemplo'),
        ),
      ],
    );
  }
}

/// 8. EJEMPLO: Escuchar cambios en tiempo real
class InfoTiempoRealWidget extends StatelessWidget {
  const InfoTiempoRealWidget({super.key});

  @override
  Widget build(BuildContext context) {
    final controlador = context.read<InformacionControlador>();

    return StreamBuilder<InformacionNegocio?>(
      stream: controlador.streamInformacion(),
      builder: (context, snapshot) {
        if (snapshot.connectionState == ConnectionState.waiting) {
          return const CircularProgressIndicator();
        }

        if (snapshot.hasError) {
          return Text('Error: ${snapshot.error}');
        }

        if (!snapshot.hasData) {
          return const Text('No hay datos disponibles');
        }

        final info = snapshot.data!;
        return Card(
          child: ListTile(
            leading: const Icon(Icons.business),
            title: Text(info.galeria.nombre),
            subtitle: Text(info.redesSociales.slogan),
            trailing: Text(
              'Actualizado: ${info.fechaActualizacion.hour}:${info.fechaActualizacion.minute}',
              style: const TextStyle(fontSize: 12, color: Colors.grey),
            ),
          ),
        );
      },
    );
  }
}
